<h1>Welcome to Kevin's Online Shop</h1>

<%= form_with(url: @products_path, method: :get) do %>
  <%= text_field_tag :query, params[:query], placeholder: "Name" %>
  <%= submit_tag "Search" %>
<% end %>

<div class='table-responsive'>
  <table class="table table-striped table-hover">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= product.description %></td>
          <td><%= link_to 'Reviews', buy_product_path(product), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>